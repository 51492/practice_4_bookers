<h1>Editting Book</h1>

<!--バリデーションによるエラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>            <!--タイトル編集フォーム (id属性は自動設定で「モデル名_カラム名」になる)-->

</div>

<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_field :body %>            <!--タイトル編集フォーム (id属性は自動設定で「モデル名_カラム名」になる)-->

</div>

<div>
  <%= f.submit "Update Book" %> <!--編集投稿ボタン-->
</div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>