<h1>Books</h1>

  <table> <!--表を作る-->

    <thead> <!--表のヘッダー部をグループ化-->

      <tr> <!--先頭行-->
        <th>title</th>
        <th>body</th>
        <th></th>
      </tr>

    </thead>

    <tbody> <!--表のボディ部をグループ化-->

      <% @books.each do |book| %>
        <tr>
          <td> <%= book.title %> </td>
          <td> <%= book.body %> </td>
          <td>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
      </tr>
      <% end %>
    </tbody>

  </table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>

<div class ="field">
  <label for="book_title">Title</label> <!--ラベルをクリックしてフォームがアクティブ化するためにラベル要素を使用-->
  <%= f.text_field :title %>            <!--タイトル投稿フォーム (id属性は自動設定で「モデル名_カラム名」になる)-->
</div>

<div class ="field">
  <label>Body               <!--ラベルをクリックしてフォームがアクティブ化するためにラベル要素を使用-->
  <%= f.text_area :body %> <!--内容投稿フォーム (id属性は自動設定で「モデル名_カラム名」になる)-->
  </label>                  <!--titleのフィールドと違う書き方でも同じ挙動？-->
</div>

<div>
  <%= f.submit "Create Book" %> <!--投稿ボタン-->
</div>



<% end %>

